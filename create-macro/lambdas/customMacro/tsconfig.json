{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "es7",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext"
    ],
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./build",
    "strict": true,
    "preserveConstEnums": true,
    "noEmit": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "paths": {
    }
  },
  "exclude": [
    "layers/database-layer/nodejs/node_modules",
    "**/*.test.ts"
  ]
}